@import "shop-template/shop-template.qss";

page{
  height:100%;
}

.root{
  width:100%;
  height:100%;
  display:flex;
  justify-content:center;
  align-items:center;
}

.container{
  width:100%;
  height:800rpx;
  margin:0;
  padding:0;
}

.swiper{
  background:red;
  width:100%;
  height:800rpx;
}

.item-swiper{
  background:white;
}

.item-root{
  height:100%;
  border-radius:30rpx;
  background:pink;
}

.bg{
  float:left;
  width:100%;
  height:500rpx;
  border-radius:30rpx 30rpx 0 0;
  background:black;
}

.subtitle{
  position:absolute;
  top:0;
  left:30rpx;
}

.subtitle-index{
  padding:4rpx 10rpx;
  font-size:14rpx;
  border-radius:12rpx;
  color:#333333;
  background:white;
  vertical-align:middle;
}

.subtitle-text{
  margin-left:20rpx;
  color:white;
  font-size:24rpx;
  vertical-align:middle;
}

.title{
  position:absolute;
  top:60rpx;
  left:30rpx;
  color:white;
  font-size:34rpx;
  letter-spacing:4rpx;
}

.shop-container{
  display:flex;
  flex-direction:row;
  width:100%;
  height:150rpx;
  padding:50rpx 0 10rpx 0;
  justify-content:space-around;
}

.bottom{
  display:flex;
  align-items:center;
  justify-content:center;
  padding:10rpx 0;
}

.bottom image{
  width:15px;
  height:10px;
  background:white;
}

.bottom text{
  font-size:24rpx;
  color:white;
}